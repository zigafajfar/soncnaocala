<%= form_for [@cart, @user] do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :cart_id, value: @cart.id %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :name, "Ime" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :last_name, "Priimek" %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :address, "Naslov" %><br>
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :email, "E-pošta" %><br>
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= link_to "Nazaj", true_cart, class: "btn btn-success btn-block" %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="form-group">
        <%= f.submit "Naroči", class: "btn btn-success btn-block" %>
      </div>
    </div>
  </div>
<% end %>
