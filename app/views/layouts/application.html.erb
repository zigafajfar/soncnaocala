<!DOCTYPE html>
<html>
<head>
  <title>Soncnaocala</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<%= link_to "", root_path, class: "logo" %>
			</div>
			<div class="col-sm-6"></div>
			<div class="col-sm-3">
				<% unless true_cart %>
					<%= form_for Cart.new do |f| %>
						<%= f.submit "Ustvari voziček", class: "btn btn-success btn-block" %>
					<% end %>
				<% else %>
					<%= render "layouts/cart" %>
				<% end %>
			</div>
		</div>
	</div>
</header>
<div id="wrap">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<% flash.each do |key, value| %>
			    <div class="alert alert-<%= key %>"><%= value %></div>
			  <% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-2 col-md-3 col-sm-3">
				<div class="side">
					<% Brand.all.each do |brand| %>
						<div class="row ">
							<div class="col-md-12">
								<div class="form-group">
							  	<p class="lead">
							  		<%= link_to brand_models_path(brand), class: "brand-name" do %>
											<span class="img"><%= image_tag brand.logo(:thumb), width: 50 %></span>
											<%= brand.name %>
							  		<% end %>
							  	</p>
							  </div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
			<div class="col-lg-10 col-md-9 col-sm-9">
				<%= yield %>
			</div>
		</div>
	</div>
</div>

<footer>
	<div class="row">
		<div class="col-md-12">
			<div class="logo-footer"></div>
		</div>
	</div>
</footer>

</body>
</html>
